<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ImgUserMainListItem"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/txtNameUserMainListItem"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/ImgUserMainListItem"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRsUserMainListItem"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:text="Rs."
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@+id/ImgUserMainListItem"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtPriceUserMainListItem"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/txtRsUserMainListItem"
            android:textSize="15sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>