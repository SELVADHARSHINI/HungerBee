<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtCartFoodName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:maxLines="2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Rs."
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtCartFoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="--"
                android:textSize="15sp" />
        </LinearLayout>

        <!--<ImageView
            android:id="@+id/ImgCartFood"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/txtCartFoodName"
            android:src="@drawable/no_image_icon" />-->

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/txtCartFoodName">

            <LinearLayout
                android:id="@+id/nextAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImgCartFoodRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_decrease" />

                <TextView
                    android:id="@+id/txtCartNumberOfItems"
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="18sp"
                    android:background="@color/toolbarcolor"/>

                <ImageView
                    android:id="@+id/ImgCartFoodAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_add" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>